<!--        <item name="android:windowMinWidthMinor">100%</item>-->
<!--        <item name="android:focusable">true</item>-->
<!--        <item name="android:focusableInTouchMode">true</item>-->
    </style>

    <style name="AppTheme.Dialog.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/btn_secondary_ripple</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

</resources>
