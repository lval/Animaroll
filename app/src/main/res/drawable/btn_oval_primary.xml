    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/btn_primary_ripple" />
            <size
                android:width="140dp"
                android:height="140dp" />
            <padding
                android:top="@dimen/btn_spacing_xxl" />
