<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btn_cta_ripple">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_cta_ripple" />
            <corners android:radius="@dimen/radius" />
            <padding
                android:left="@dimen/btn_spacing_sm"
                android:top="@dimen/btn_spacing_xs"
                android:right="@dimen/btn_spacing_sm"
                android:bottom="@dimen/btn_spacing_xs" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_cta" />
            <corners android:radius="@dimen/radius" />
        </shape>
    </item>
</ripple>