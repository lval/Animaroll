<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btn_primary_ripple">

  <item android:id="@android:id/mask">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_primary_ripple" />
      <corners android:radius="@dimen/radius_lg" />
    </shape>
  </item>

  <item android:id="@android:id/background">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_primary" />
      <corners android:radius="@dimen/radius_lg" />
      <padding
          android:left="@dimen/btn_spacing_md"
          android:top="@dimen/btn_spacing_lg"
          android:right="@dimen/btn_spacing_md"
          android:bottom="@dimen/btn_spacing_lg" />
    </shape>
  </item>
</ripple>
