<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btn_secondary_ripple">

  <item android:id="@android:id/mask">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_secondary_ripple" />
      <corners android:radius="@dimen/radius_xl" />
      <padding
          android:left="@dimen/btn_spacing_xl"
          android:top="@dimen/btn_spacing_xs"
          android:right="@dimen/btn_spacing_xl"
          android:bottom="@dimen/btn_spacing_xs" />
    </shape>
  </item>

  <item android:id="@android:id/background">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_secondary" />
      <corners android:radius="@dimen/radius_xl" />
    </shape>
  </item>
</ripple>